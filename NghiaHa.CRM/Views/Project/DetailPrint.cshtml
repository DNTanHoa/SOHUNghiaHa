@{ ViewData["Title"] = @Model.InvoiceName + " - In biểu mẫu"; ViewData["InvoiceID"] = @Model.ID; }

@using Kendo.Mvc.UI
@model SOHU.Data.Models.Invoice
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="Detail" asp-controller="Project">Thi công</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailDuToan" asp-controller="Project">Dự toán</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailChamCong" asp-controller="Project">Chấm công</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailChaoGia" asp-controller="Project">Chào giá</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailHopDong" asp-controller="Project">Hợp đồng</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailNghiemThu" asp-controller="Project">Nghiệm thu</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailThanhLy" asp-controller="Project">Thanh lý</a></li>
                    <li class="breadcrumb-item"><a class="text-primary" asp-route-ID="@Model.ID" asp-action="DetailPrint" asp-controller="Project">Thống kê</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-body">
                        @Html.HiddenFor(Model => Model.ID)
                        @Html.HiddenFor(Model => Model.CategoryID)
                        <div class="row">
                            <div class='col-md-6'>
                                <h6><b>@Model.InvoiceName</b> - In biểu mẫu</h6>
                            </div>
                            <div class='col-md-1'>
                                <a asp-action="Index" asp-controller="Project" title="Danh sách" style="width:100%;" class="btn btn-info">
                                    <span class="fas fa-arrow-left"></span>
                                </a>
                            </div>
                            <div class='col-md-1'>
                                <button style="width:100%;" type="submit" title="Save" class="btn btn-primary">
                                    <span class="fas fa-save"></span>
                                </button>
                            </div>

                            <div class='col-md-1'>
                                <a asp-route-ID="@Model.ID" asp-action="DetailThiCongBarcode" asp-controller="Project" title="Files" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-qrcode"></span>
                                </a>
                            </div>
                            <div class='col-md-1'>
                                <a asp-route-ID="@Model.ID" asp-action="DetailFiles" asp-controller="Project" title="Files" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-paperclip"></span>
                                </a>
                            </div>
                            <div class='col-md-1'>
                                <a asp-route-ID="@Model.ID" asp-action="DetailPrint" asp-controller="Project" title="Bảng thống kê vật tư thi công" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-print"></span>
                                </a>
                            </div>
                            <div class='col-md-1'>
                                <a asp-route-ID="0" asp-action="Detail" asp-controller="Project" title="Tạo mới" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-plus"></span>
                                </a>
                            </div>
                        </div>
                        <br />
                        <div class="row">                            
                            <div class='col-sm-3'>
                                @(Html.Kendo().DatePickerFor(Model => Model.DateBegin)
                                     .Format("dd/MM/yyyy")
                                     .HtmlAttributes(new { @class = "form-control text-right", title = "Ngày xuất" })
                                     .DateInput()
                                )
                            </div>
                            <div class='col-sm-3'>
                                <button type="button" class="btn btn-success" title="Search" onclick="onPrint()" style="width:100%;">
                                    <span class="fas fa-print"></span> Phiếu xuất kho
                                </button>
                            </div>
                            <div class='col-md-3'>
                                <a target="_blank" asp-route-ID="@Model.ID" asp-action="PrintPreviewBangThongKeVatTuThiCong" asp-controller="Project" title="Bảng thống kê vật tư thi công" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-print"></span> Bảng thống kê theo ngày
                                </a>
                            </div>
                            <div class='col-md-3'>
                                <a target="_blank" asp-route-ID="@Model.ID" asp-action="PrintPreviewBangThongKeVatTuThiCongSUM" asp-controller="Project" title="Bảng thống kê vật tư thi công" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-print"></span> Bảng thống kê SUM
                                </a>
                            </div>
                        </div>
                        <div class="row">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@(Html.Kendo().Notification()
    .Name("Notification")
    .Position(p => p.Pinned(true).Top(30).Right(30))
    .Width(400)
)
<script>
    function onPrint() {
        var IDValue = $("#ID").val();
        var dateTrackStringValue = toDate02($("#DateBegin").val());
        dateTrackStringValue = dateTrackStringValue.replace("/", "_");
        dateTrackStringValue = dateTrackStringValue.replace("/", "_");
        dateTrackStringValue = dateTrackStringValue.replace("-", "_");
        dateTrackStringValue = dateTrackStringValue.replace("-", "_");
        var url = '/Project/PrintPreviewPhieuXuatKho?ID=' + IDValue + '&dateTrackString=' + dateTrackStringValue;
        window.open(url, '_blank');
    }
</script>