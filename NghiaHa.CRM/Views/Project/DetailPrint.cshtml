@{ ViewData["Title"] = @Model.InvoiceName + " - In biểu mẫu"; ViewData["InvoiceID"] = @Model.ID; }

@using Kendo.Mvc.UI
@model SOHU.Data.Models.Invoice
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8">
                <h1><b>@Model.InvoiceName</b></h1>
            </div>
            <div class="col-sm-4">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dự án - công trình</a></li>
                    <li class="breadcrumb-item active"><a class="text-primary" asp-action="Index" asp-controller="Project">Danh sách</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-body">
                        @Html.HiddenFor(Model => Model.ID)
                        @Html.HiddenFor(Model => Model.CategoryID)
                        <div class="row">
                            <div class='col-md-1'>
                                <a asp-route-ID="@Model.ID" asp-action="Detail" asp-controller="Project" title="Chi tiết" style="width:100%;" class="btn btn-info">
                                    <span class="fas fa-arrow-left"></span>
                                </a>
                            </div>
                            <div class='col-md-4'>
                                <a target="_blank" asp-route-ID="@Model.ID" asp-action="PrintPreviewBangThongKeVatTuThiCong" asp-controller="Project" title="Bảng thống kê vật tư thi công" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-print"></span> Bảng thống kê vật tư thi công
                                </a>
                            </div>
                            <div class='col-sm-2'>
                                @(Html.Kendo().DatePickerFor(Model => Model.DateBegin)
                                     .Format("dd/MM/yyyy")
                                     .HtmlAttributes(new { @class = "form-control text-right", title = "Ngày xuất" })
                                     .DateInput()
                                )
                            </div>
                            <div class='col-sm-4'>
                                <button type="button" class="btn btn-success" title="Search" onclick="onPrint()" style="width:100%;">
                                    <span class="fas fa-print"></span> Phiếu xuất kho
                                </button>
                            </div>
                        </div>
                        <div class="row">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@(Html.Kendo().Notification()
    .Name("Notification")
    .Position(p => p.Pinned(true).Top(30).Right(30))
    .Width(400)
)
<script>  
    function onPrint() {        
        var IDValue = $("#ID").val();
        var dateTrackStringValue = toDate02($("#DateBegin").val());   
        dateTrackStringValue = dateTrackStringValue.replace("/", "_");
        dateTrackStringValue = dateTrackStringValue.replace("/", "_");
        dateTrackStringValue = dateTrackStringValue.replace("-", "_");
        dateTrackStringValue = dateTrackStringValue.replace("-", "_");
        var url = '/Project/PrintPreviewPhieuXuatKho?ID=' + IDValue + '&dateTrackString=' + dateTrackStringValue;        
        window.open(url, '_blank');
    }   
</script>