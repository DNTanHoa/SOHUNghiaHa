@{ ViewData["Title"] = @Model.BuyName + " - In biểu mẫu"; ViewData["InvoiceID"] = @Model.ID; }

@using Kendo.Mvc.UI
@model SOHU.Data.Models.Invoice
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-body">
                        @Html.HiddenFor(Model => Model.ID)
                        @Html.HiddenFor(Model => Model.CategoryID)
                        <div class="row">
                            <div class='col-md-9'>
                                <h6><b>@Model.BuyName</b> - In biểu mẫu</h6>
                            </div>
                            <div class='col-md-1'>
                                <a  asp-route-ID="@Model.ID" asp-action="BanLeDetail" asp-controller="Invoice" title="Chi tiết" style="width:100%;" class="btn btn-info">
                                    <span class="fas fa-arrow-left"></span>
                                </a>
                            </div>                            
                            <div class='col-md-1'>
                                <a asp-route-ID="@Model.ID" asp-action="DetailBanLeBarcode" asp-controller="Invoice" title="Mã vạch" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-qrcode"></span>
                                </a>
                            </div>                            
                            <div class='col-md-1'>
                                <a asp-route-ID="0" asp-action="BanLeDetail" asp-controller="Invoice" title="Tạo mới" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-plus"></span>
                                </a>
                            </div>
                        </div>
                        <br />
                        <div class="row">                                                        
                            <div class='col-md-3'>
                                <a target="_blank" asp-route-ID="@Model.ID" asp-action="PrintPreviewBangThongKeVatTuThiCong" asp-controller="Invoice" title="Bảng thống kê chi tiết" style="width:100%;" class="btn btn-success">
                                    <span class="fas fa-print"></span> Bảng thống kê chi tiết
                                </a>
                            </div>                            
                        </div>
                        <div class="row">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@(Html.Kendo().Notification()
    .Name("Notification")
    .Position(p => p.Pinned(true).Top(30).Right(30))
    .Width(400)
)
<script>
    function onPrint() {
        var IDValue = $("#ID").val();
        var dateTrackStringValue = toDate02($("#DateBegin").val());
        dateTrackStringValue = dateTrackStringValue.replace("/", "_");
        dateTrackStringValue = dateTrackStringValue.replace("/", "_");
        dateTrackStringValue = dateTrackStringValue.replace("-", "_");
        dateTrackStringValue = dateTrackStringValue.replace("-", "_");
        var url = '/Project/PrintPreviewPhieuXuatKho?ID=' + IDValue + '&dateTrackString=' + dateTrackStringValue;
        window.open(url, '_blank');
    }
</script>